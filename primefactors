function primeFactors(n)
{
  var factors = [];
  var divisor = 2;
  var limit = Math.sqrt(n);
  var isPrime = false;
  if(n == 2 || n == 3)
    {
      factors.push(n);
      return factors;
    }
   
  while(divisor <= limit)
    {
      if(n % divisor == 0)
        {
          isPrime = true;
          factors.push(n);
        }
      if(n == 2)
        {
          divisor ++;
        }
      else
        {
          divisor += 2;
        }
    }
  
   if(!isPrime)
     {
       divisor = 2;
       while(divisor <= limit)
         {
           if(n % divisor == 0)
             {
               factors.push(divisor);
               n = n/divisor ;
             }else
               {
                 if(n == 2)
        {
          divisor ++;
        }
      else
        {
          divisor += 2;
        }
               }
         }
     }
  alert(factors);
}